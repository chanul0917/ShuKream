	<select id="shopMainProductsList" resultType="Map" parameterType="Map">
		<![CDATA[
			SELECT *
			FROM (
			  SELECT PRODUCTS.*,IMAGES.IMG_FILE, ROWNUM AS rnum
			  FROM PRODUCTS
			  JOIN IMAGES 
			  ON PRODUCTS.PRODUCT_ID = IMAGES.IMG_PRODUCT_IDX
			  WHERE IMAGES.IMG_FILE LIKE '%main.jpg'
			  ORDER BY PRODUCTS.PRODUCT_ID DESC
			) 
			WHERE rnum BETWEEN #{start} AND #{end}
		]]>
	</select>	
	
	<select id="shopMainProductCount" resultType="int">
		<![CDATA[
			SELECT COUNT(*) FROM PRODUCTS
		]]>
	</select>


	

